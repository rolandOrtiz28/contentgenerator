<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Practice Social Media Template | Eddie AI</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="script.js"></script>
    <style>
        :root {
            --main-color: #101010;
            --accent-color: #ff007f;
            --light-gray: #f9f9f9;
        }

        body {
            background: var(--light-gray);
            font-family: Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            flex-direction: column;
        }

        .container {
            max-width: 700px;
            background: #fff;
            padding: 1.5rem;
            border-radius: 12px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        select {
            padding: 8px;
            border-radius: 6px;
            border: 1px solid #ddd;
            font-size: 1rem;
            cursor: pointer;
            margin-bottom: 15px;
        }

        #preview {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            margin-top: 15px;
            width: 100%;
        }

        /* üìå Facebook Post Layout */
        .post-layout {
            width: 500px;
            border: 1px solid #ddd;
            border-radius: 12px;
            background: white;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            padding: 12px;
        }

        .post-header {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 10px;
        }

        .profile-pic {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #ddd;
        }

        .post-image {
            width: 100%;
            height: 250px;
            background: url('https://via.placeholder.com/500x250') no-repeat center;
            background-size: cover;
            border-radius: 8px;
            margin-top: 10px;
        }

        .post-footer {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
            font-size: 0.85rem;
            color: #777;
        }

        /* üé¨ Reel Layout */
        .reel-layout {
            width: 320px;
            height: 500px;
            background: black;
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            border-radius: 12px;
            padding: 10px;
            position: relative;
        }

        .reel-video {
            width: 100%;
            height: 85%;
            background: url('https://via.placeholder.com/320x400') no-repeat center;
            background-size: cover;
            border-radius: 8px;
        }

        .reel-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            font-size: 0.85rem;
        }

        /* üìñ Story Layout */
        .story-layout {
            width: 320px;
            height: 570px;
            background: linear-gradient(135deg, #ff007f, #ffcc00);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            text-align: center;
            font-size: 1.2rem;
            font-weight: bold;
            padding: 20px;
            position: relative;
        }

        .story-image {
            width: 100%;
            height: 100%;
            background: url('https://via.placeholder.com/320x570') no-repeat center;
            background-size: cover;
            border-radius: 12px;
            position: absolute;
            top: 0;
            left: 0;
            opacity: 0.8;
        }

        .story-text {
            position: relative;
            z-index: 2;
        }

        /* ‚úÖ Text Table Styling */
        .text-container {
            margin-top: 20px;
            width: 100%;
            text-align: left;
        }

        .text-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        .text-table th, .text-table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
            font-size: 0.9rem;
        }

        .text-table th {
            background: var(--light-gray);
        }

    </style>
</head>
<body>

    <div class="container">
        <h1 class="text-lg font-bold text-[var(--main-color)] text-center mb-3">
            Practice Social Media Template
        </h1>

        <!-- Dropdown to Select Type -->
        <select id="postType">
            <option value="Post">Facebook Post</option>
            <option value="Reel">Instagram/TikTok Reel</option>
            <option value="Story">Instagram/Facebook Story</option>
        </select>

        <!-- Live Preview Section -->
        <div id="preview"></div>

        <!-- Text Table Section -->
        <div class="text-container">
            <h2 style="font-size: 1rem; font-weight: bold;">Generated Content</h2>
            <table class="text-table">
                <tr><th>Caption</th><td id="caption-text"></td></tr>
                <tr><th>Hashtags</th><td id="hashtags-text"></td></tr>
                <tr><th>CTA</th><td id="cta-text"></td></tr>
            </table>
        </div>
    </div>

    <script>
        document.getElementById("postType").addEventListener("change", function() {
            let selectedType = this.value;
            let previewDiv = document.getElementById("preview");

            let caption = "Want to make your brand stand out? Here are 3 easy tips! üé®üì∏‚ú®";
            let hashtags = "#Design #Branding #Marketing";
            let cta = "Start your journey today!";

            previewDiv.innerHTML = ""; // Clear previous content

            if (selectedType === "Post") {
                previewDiv.innerHTML = `
                    <div class="post-layout">
                        <div class="post-header">
                            <div class="profile-pic"></div>
                            <div>
                                <p><strong>EditEdge Multimedia</strong></p>
                                <p style="font-size: 0.8rem; color: #777;">Just now ¬∑ üåç</p>
                            </div>
                        </div>
                        <div class="post-content">
                            <p>${caption}</p>
                            <div class="post-image"></div>
                            <p>${hashtags}</p>
                        </div>
                        <div class="post-footer">
                            <span>üëç Like</span>
                            <span>üí¨ Comment</span>
                            <span>üîÑ Share</span>
                        </div>
                    </div>
                `;
            }

            // Update Table Content
            document.getElementById("caption-text").textContent = caption;
            document.getElementById("hashtags-text").textContent = hashtags;
            document.getElementById("cta-text").textContent = cta;
        });

        document.getElementById("postType").dispatchEvent(new Event("change"));
    </script>

</body>
</html>
