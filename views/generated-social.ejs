<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generated Social Media Post | Eddie AI</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="/js/script.js"></script>
    <style>
        :root {
            --main-color: #101010;
            --accent-color: #ff007f;
            --light-gray: #f9f9f9;
        }

        body {
            background: var(--light-gray);
            font-family: Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            flex-direction: column;
        }

        .container {
            max-width: 700px;
            background: #fff;
            padding: 1.5rem;
            border-radius: 12px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        #preview {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            margin-top: 15px;
            width: 100%;
        }

        /* üìå Facebook Post Layout */
        /* Facebook Post Layout */
.post-layout {
    width: 500px;
    border: 1px solid #ddd;
    border-radius: 12px;
    background: white;
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
    padding: 12px;
    margin-bottom: 15px;
}

/* Header Section (Profile + Name) */
.post-header {
    display: flex;
    align-items: start;
    gap: 10px;
    margin-bottom: 10px;
}

.profile-pic {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: url('https://static.vecteezy.com/system/resources/thumbnails/003/337/584/small/default-avatar-photo-placeholder-profile-icon-vector.jpg') no-repeat center;
    background-size: cover;
}

/* Artificial Graphic Section */
.artificial-graphic {
    width: 100%;
    height: 280px;
    background: linear-gradient(135deg, #ddd, #aaa);
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 15px;
    color: #333;
    margin-top: 10px;
}

.artificial-graphic h2 {
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 5px;
}

.artificial-graphic p {
    font-size: 0.9rem;
    color: #555;
}

/* Post Footer (Like, Comment, Share) */
.post-footer {
    display: flex;
    justify-content: space-around;
    margin-top: 10px;
    font-size: 0.85rem;
    color: #777;
    padding: 8px 0;
    border-top: 1px solid #ddd;
}


        /* üé¨ Reel Layout */
        .reel-layout {
            width: 320px;
            height: 500px;
            background: black;
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            border-radius: 12px;
            padding: 10px;
            position: relative;
        }

        .reel-video {
            width: 100%;
            height: 85%;
            background: url('https://via.placeholder.com/320x400') no-repeat center;
            background-size: cover;
            border-radius: 8px;
        }

        .reel-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            font-size: 0.8rem;
        }

        /* üìñ Story Layout */
        .story-layout {
            width: 320px;
            height: 570px;
            background: linear-gradient(135deg, #ff007f, #ffcc00);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 12px;
            text-align: center;
            font-size: 0.9rem;
            font-weight: bold;
            padding: 20px;
            position: relative;
        }

        .story-image {
            width: 100%;
            height: 100%;
            background: url('https://via.placeholder.com/320x570') no-repeat center;
            background-size: cover;
            border-radius: 12px;
            position: absolute;
            top: 0;
            left: 0;
            opacity: 0.8;
        }

        .story-text {
            position: relative;
            z-index: 2;
        }

        /* ‚úÖ Text Table Styling */
        .text-container {
            margin-top: 20px;
            width: 100%;
            text-align: left;
        }

        .text-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        .text-table th, .text-table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
            font-size: 0.9rem;
        }

        .text-table th {
            background: var(--light-gray);
        }

        .copy-all-btn {
            background: var(--accent-color);
            color: white;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
            font-size: 1rem;
            border-radius: 5px;
            margin-top: 15px;
        }

        .copy-all-btn:hover {
            opacity: 0.8;
        }

        .button-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px; /* Space between buttons */
    margin-top: 24px; /* Equivalent to Tailwind's mt-6 */
    width: 100%;
    max-width: 400px; /* Optional: Limits the container width for better centering */
    margin-left: auto;
    margin-right: auto;
  }

  .copy-all-btn,
  .home-btn,
  .generate-btn {
    padding: 12px 24px; /* Consistent padding */
    border: none;
    border-radius: 8px; /* Rounded corners */
    font-size: 18px; /* Equivalent to Tailwind's text-lg */
    font-weight: 600; /* Equivalent to Tailwind's font-semibold */
    cursor: pointer;
    text-align: center;
    text-decoration: none; /* Remove underline from link */
    display: inline-block; /* Ensure consistent block-level behavior */
    width: 100%; /* Full width for the generate button form */
    max-width: 300px; /* Optional: Caps the button width */
    transition: background-color 0.2s ease; /* Smooth hover transition */
  }

  .copy-all-btn {
    background-color: #1f2937; /* Dark gray */
    color: #ffffff;
  }
  .copy-all-btn:hover {
    background-color: #111827; /* Darker gray on hover */
  }

  .home-btn {
    background-color: #e5e7eb; /* Light gray */
    color: #1f2937;
  }
  .home-btn:hover {
    background-color: #d1d5db; /* Slightly darker gray on hover */
  }

  .generate-btn {
    background-color: var(--accent-color); /* Your accent color */
    color: #ffffff;
  }
  .generate-btn:hover {
    background-color: #db2777; /* Slightly darker pink on hover */
  }

  /* Ensure the form button aligns properly */
  form {
    width: 100%;
  }

    </style>
</head>
<body>

    <div class="container">
        <h1 class="text-lg font-bold text-[var(--main-color)] text-center mb-3">
            AI-Generated Social Media Post
        </h1>

        <div id="preview">
            <% if (socialMediaType && socialMediaType.toLowerCase() === "post") { %>
                <div class="post-layout">
                    <!-- Post Header (Profile + Name) -->
                    <div class="post-header">
                        <div class="profile-pic"></div>
                        <div>
                            <p><strong><%= companyName.split(" ").slice(0, 2).join(" ") %></strong></p>
                            <p style="font-size: 0.8rem; color: #777;">Just now ¬∑ üåç</p>
                        </div>
                    </div>
            
                    <!-- Post Content -->
                    <div class="post-content">
                        <p style="margin-bottom: 5px;"><%= caption || "No caption generated." %></p>
                        <p style="margin-bottom: 5px;"><%= mainContent || "No Content generated." %></p>
                        <p style="color: #007bff; font-size: 0.9rem;"><%= hashtags || "" %></p>
            
                        <!-- Artificial Graphic Section -->
                        <div class="artificial-graphic">
                            <div class="artificial-graphic">
                                <h2><%= posterText || "No text provided." %></h2>
                            </div>
                        </div>
            
                        <!-- Like, Comment, and Share Section -->
                        <div class="post-footer">
                            <span>üëç Like</span>
                            <span>üí¨ Comment</span>
                            <span>üîÑ Share</span>
                        </div>
                    </div>
                </div>
        
            
                <% } else if (socialMediaType && socialMediaType === "reel") { %>
                    <div class="reel-layout">
                        <div class="reel-video">
                            <p class="scene-text">
                                üé¨ <%= textOnScreen ? textOnScreen.split("\n")[0] : "No scene available." %>
                            </p>
                        </div>
                        <div class="post-content">
                            <p style="font-size: 1rem; font-weight: bold; text-align: center;">
                                "<%= caption || "No caption generated." %>"
                            </p>
                        </div>
                        <div class="reel-footer">
                            <span>üé∂ Sound: Trending Audio</span>
                            <span>‚ù§Ô∏è 1.2K</span>
                        </div>
                    </div>
                
                <% } else if (socialMediaType && socialMediaType === "story") { %>
                    <div class="story-layout">
                        <div class="story-image"></div>
                        <p class="story-text">
                            <%= textOnScreen ? textOnScreen.split("\n")[0] : caption || "No text available." %>
                        </p>
                    </div>
                
                <% } else { %>
                    <p>‚ö†Ô∏è No social media type detected. Please generate content again.</p>
                <% } %>
        </div>
        
        <!-- Text Table Section -->
        <div class="text-container">
            <h2 style="font-size: 1rem; font-weight: bold;">Generated Content</h2>
            <table class="text-table" id="content-table">
                <% if (socialMediaType === "post") { %>
                    <tr><th>Caption</th><td data-label="Caption"><%= caption || "No caption generated." %></td></tr>
                    <tr><th>Main Content</th><td data-label="Main Content"><%= mainContent || "No content generated." %></td></tr>
                    <tr><th>Texts on Poster</th><td data-label="Texts on Poster"><%= posterText || "No text provided." %></td></tr>
                    <tr><th>Hashtags</th><td data-label="Hashtags"><%= hashtags || "No hashtags available." %></td></tr>
                    <tr><th>CTA</th><td data-label="CTA"><%= cta || "No CTA available." %></td></tr>
                    <tr><th>Assets</th><td data-label="Assets"><%= assets || "No assets provided." %></td></tr>
                <% } else if (socialMediaType === "reel" || socialMediaType === "story") { %>
                    <tr><th>Caption</th><td data-label="Caption"><%= caption || "No caption generated." %></td></tr>
                    <tr><th>Hashtags</th><td data-label="Hashtags"><%= hashtags || "No hashtags available." %></td></tr>
                    <tr><th>CTA</th><td data-label="CTA"><%= cta || "No CTA available." %></td></tr>
                    <tr><th>Video Concept</th><td data-label="Video Concept"><%= videoConcept || "No concept provided." %></td></tr>
                    <tr><th>Video Script</th><td data-label="Video Script"><%= script || "No script provided." %></td></tr>
                    <tr><th>Text on Screen</th><td data-label="Text on Screen"><%= textOnScreen || "No text provided." %></td></tr>
                    <tr><th>Assets</th><td data-label="Assets"><%= assets || "No assets provided." %></td></tr>
                <% } %>
            </table>
        </div>

        <!-- Copy All Button -->
        <div class="button-container">
            <button class="copy-all-btn" onclick="copyAllContent()">Copy All</button>
            <a href="/" class="home-btn">Home</a>
            <form action="/social-media/generate-new-content" method="GET">
              <button type="submit" class="generate-btn">Generate New Content?</button>
            </form>
          </div>
        </div>
        <!-- JavaScript for Copying All Content with Labels -->
        <script>
            function copyAllContent() {
                let textToCopy = "";
                const tableRows = document.querySelectorAll("#content-table tr");

                tableRows.forEach(row => {
                    const columns = row.getElementsByTagName("td");
                    if (columns.length > 0) {
                        const label = columns[0].getAttribute("data-label"); // Get the label
                        const text = columns[0].innerText.trim(); // Get the text
                        textToCopy += `${label}: ${text}\n\n`; // Format it properly
                    }
                });

                navigator.clipboard.writeText(textToCopy.trim()).then(() => {
                    alert("Copied All Content!");
                }).catch(err => {
                    console.error("Failed to copy: ", err);
                });
            }
        </script>
        
       
</body>
</html>
