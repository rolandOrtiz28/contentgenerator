<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Branding Details</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>Branding Details</h1>
    <p>You selected: <strong><%= contentType %></strong></p>

    <form id="brandingForm" action="/generate-content" method="POST">
        <input type="hidden" name="contentType" value="<%= contentType %>">
        
        <label>Color Combination:</label>
        <input type="text" id="colorCombination" name="colorCombination" placeholder="e.g., Blue & White" required><br>

        <label>Brand Tone:</label>
        <select id="brandTone" name="brandTone">
            <option value="professional">Professional</option>
            <option value="casual">Casual</option>
            <option value="funny">Funny</option>
        </select><br>

        <label>Purpose:</label>
        <input type="text" id="purpose" name="purpose" placeholder="e.g., Promote a new product" required><br>

        <!-- New Preview Button -->
        <button type="button" onclick="showSample()">Show Sample</button>
        <button type="submit" id="finalSubmit" style="display: none;">Finalize & Generate</button>
    </form>

    <!-- Sample Preview Section -->
    <div id="samplePreview" style="display: none;">
        <h2>Sample Content</h2>
        <p id="sampleText"></p>
        <button onclick="finalizeContent()">Confirm & Submit</button>
    </div>

    <script>
        function showSample() {
            const brandTone = document.getElementById("brandTone").value;
            let sampleContent = "";

            if (brandTone === "professional") {
                sampleContent = "âœ¨ Our latest campaign showcases sleek branding using Blue & White. Stay ahead in the industry. #Professional #Branding";
            } else if (brandTone === "casual") {
                sampleContent = "ðŸš€ Exciting news! Check out our latest [product/service] in stylish Blue & White! #Trendy #CasualVibes";
            } else {
                sampleContent = "ðŸ˜‚ Get ready to laugh! Our new campaign is all about fun & energy, powered by Blue & White. #Funny #Entertainment";
            }

            document.getElementById("sampleText").innerText = sampleContent;
            document.getElementById("samplePreview").style.display = "block";
            document.getElementById("finalSubmit").style.display = "inline";
        }

        function finalizeContent() {
            document.getElementById("brandingForm").submit();
        }
    </script>
</body>
</html>
